{
  "name": "redink",
  "version": "0.1.7",
  "description": "RethinkDB ORM",
  "main": "dist/index.js",
  "scripts": {
    "build": "better-npm-run build",
    "build:prod": "better-npm-run build:prod",
    "clean": "better-npm-run clean",
    "cover": "better-npm-run cover",
    "test": "better-npm-run test",
    "test:lint": "better-npm-run test:lint",
    "test:src": "better-npm-run test:src",
    "prepublish": "better-npm-run prepublish"
  },
  "betterScripts": {
    "build": {
      "command": "npm run clean && mkdirp dist && babel src --out-dir dist --source-maps inline"
    },
    "build:prod": {
      "command": "npm run clean && mkdirp dist && babel src --out-dir dist"
    },
    "clean": {
      "command": "rimraf dist coverage .nyc_output"
    },
    "cover": {
      "command": "npm run clean && nyc ava && nyc report --reporter=html && open -a \"Google Chrome\" coverage/index.html"
    },
    "test": {
      "command": "npm run test:lint && npm run test:src"
    },
    "test:lint": {
      "command": "eslint src test"
    },
    "test:src": {
      "command": "nyc ava && nyc report --reporter=lcov"
    },
    "prepublish": {
      "command": "npm run build:prod"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/endfire/redink.git"
  },
  "keywords": [
    "RethinkDB",
    "ORM"
  ],
  "author": "CJ Brewer",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/endfire/redink/issues"
  },
  "homepage": "https://github.com/endfire/redink#readme",
  "dependencies": {
    "lodash": "^4.13.1",
    "redink-errors": "0.1.0",
    "rethinkdb": "^2.3.2"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "better-npm-run": "0.0.9",
    "eslint": "^3.0.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.10.3",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^5.2.2",
    "mkdirp": "^0.5.1",
    "nyc": "^7.0.0",
    "rimraf": "^2.5.3"
  },
  "ava": {
    "files": [
      "test"
    ],
    "source": [
      "src/**/*.{js}",
      "!dist/**/*"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
